{
  "id": "jswidgets.TabBoxForm",
  "type": "model",
  "displayHint": "view",
  "cssClass": "tab-box-form",
  "rootGroupBox": {
    "id": "MainBox",
    "objectType": "GroupBox",
    "fields": [
      {
        "id": "DetailBox",
        "objectType": "GroupBox",
        "gridColumnCount": 1,
        "fields": [
          {
            "id": "TabBox",
            "objectType": "TabBox",
            "selectedTab":"TabItem1",
            "tabItems": [
              {
                "id": "TabItem1",
                "objectType": "jswidgets.SampleTabItem",
                "label": "First Tab",
                 "fields": [
                   {
                     "id": "LabelField",
                     "objectType": "LabelField",
                     "label": "Tab01"
                   }
                 ]
              },
              {
                "id": "TabItem2",
                "objectType": "jswidgets.SampleTabItem",
                "label": "Second Tab",
                 "fields": [
                   {
                     "id": "LabelField",
                     "objectType": "LabelField",
                     "label": "Tab02"
                   }
                 ]
              },
              {
                "id": "TabItem3",
                "objectType": "jswidgets.SampleTabItem",
                "label": "Third Tab",
                 "fields": [
                   {
                     "id": "LabelField",
                     "objectType": "LabelField",
                     "label": "Tab03"
                   }
                 ]
              }
            ],
            "menus": [
              {
                "id": "AddTabMenu",
                "objectType": "Menu",
                "text": "Add tab item",
                "iconId": "${iconId:PLUS}",
                "stackable": true,
                "menuTypes": ["TabBox.Header"],
                "keyStroke": "insert"
              },
              {
                "id": "ShareMenu",
                "objectType": "Menu",
                "iconId": "${iconId:MENU}",
                "stackable": false,
                "menuTypes": ["TabBox.Header"],
                "horizontalAlignment": 1
              }
            ]
          }
        ]
      },
      {
        "id": "PropertiesBox",
        "objectType": "GroupBox",
        "gridColumnCount": 2,
        "label": "Properties",
        "fields": [
          {
            "id": "TabBox",
            "objectType": "TabBox",
            "selectedTab":"TabBoxProperties",
            "tabItems": [
              {
                "id": "TabBoxProperties",
                "objectType": "TabItem",
                "label": "TabBox",
                "fields": [
                  {
                    "id": "SelectedTabField",
                    "objectType": "SmartField",
                    "label": "Selected Tab",
                    "lookupCall": "jswidgets.SelectedTabLookupCall"
                  },
                  {
                    "id": "FormFieldPropertiesBox",
                    "objectType": "jswidgets.FormFieldPropertiesBox"
                  },
		  {
                    "id": "GridDataBox",
                    "objectType": "jswidgets.GridDataBox",
                    "label": "Grid Data Hints"
                  }
                ]
              },
              {
                "id": "CurrentTabItemProperties",
                "objectType": "TabItem",
                "label": "Current Tab Item",
                "fields": [
                  {
                    "id": "CurrentTab.GroupBoxPropertiesBox",
                    "objectType": "jswidgets.GroupBoxPropertiesBox"
                  },
                  {
                    "id": "GridDataBox",
                    "objectType": "jswidgets.GridDataBox",
                    "label": "Grid Data Hints"
                  },
                  {
                    "id": "CurrentTab.FormFieldPropertiesBox",
                    "objectType": "jswidgets.FormFieldPropertiesBox"
                  }
                ]
              }
            ]
          }
        ]
      }

    ]
  }
}
